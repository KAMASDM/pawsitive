{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "petSlugs": {
      "$slug": {
        ".read": "true",
        ".write": "auth != null"
      }
    },
    "userPets": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        "$petId": {
          ".read": "true",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "petPosts": {
      "$petId": {
        ".read": "true",
        ".write": "auth != null",
        "$postId": {
          ".validate": "newData.hasChildren(['mediaUrl', 'mediaType', 'timestamp'])"
        }
      }
    },
    "petEvents": {
      "$petId": {
        ".read": "true",
        ".write": "auth != null",
        "$eventId": {
          ".validate": "newData.hasChildren(['title', 'date', 'type', 'timestamp'])"
        }
      }
    },
    "petProfiles": {
      "$petId": {
        ".read": "true",
        ".write": "auth != null"
      }
    },
    "matingRequests": {
      "sent": {
        "$userId": {
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId"
        }
      },
      "received": {
        "$userId": {
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "adoptionRequests": {
      "$requestId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "userResources": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "conversations": {
      "$conversationId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "comments": {
      "$resourceId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "taggedPlaces": {
      ".read": "true",
      ".write": "auth != null",
      "$placeId": {
        ".validate": "newData.hasChildren(['placeName', 'location', 'geohash', 'isPetFriendly', 'comment', 'userId', 'userEmail', 'timestamp', 'createdAt'])"
      }
    },
    "notifications": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null"
      }
    }
  }
}
